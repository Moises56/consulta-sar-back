// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  role      String   @default("OPERADOR")
  name      String
  identidad String   @unique
  Nempleado String   @unique
  gerencia  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  logs      UserLog[]
  consultasVB MisConsultasVB[]

  @@map("users")
}

model UserLog {
  id          String   @id @default(uuid())
  userId      String
  action      String   // CREATE, UPDATE, DELETE, READ
  details     String   // Detalles adicionales de la acci√≥n
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])

  @@map("user_logs")
}

model DATOS_AMDC {
  id                  String   @id @default(uuid())
  RTN                 String
  ICS                 String
  NOMBRE              String
  NOMBRE_COMERCIAL    String
  ANIO                Int
  CANTIDAD_DECLARADA  Decimal
  ESTATUS             Int
  FECHA               DateTime

  @@index([RTN])
  @@index([ICS])
  @@index([ANIO])
  @@index([NOMBRE])
  @@index([NOMBRE_COMERCIAL])
  @@map("datos_amdc")
}

model MisConsultasVB {
  id                String    @id @default(uuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id])
  rtn               String
  nombreComercial   String
  anio              String
  importeTotalVentas Float
  declaracionesAmdc String    // Storing serialized JSON as SQL Server doesn't support native JSON
  diferencia        Float
  analisis          String
  fechaConsulta     DateTime  @default(now())

  @@index([userId])
  @@index([rtn])
  @@index([anio])
  @@map("mis_consultas_vb")
}
